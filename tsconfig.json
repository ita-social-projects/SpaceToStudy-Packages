{
    "compilerOptions": {
      "target": "ES5",
      "module": "ESNext",
      "jsx": "react-jsx",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "declarationDir": "dist/types",
      "outDir": "dist",
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
        "utils": ["packages/utils/lib"]
      }
    },
    "include": [
      "packages/components/**/*",
      "packages/utils/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  